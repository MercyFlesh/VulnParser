<Window x:Class="VulnParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VulnParser" 
        xmlns:viwmodels="clr-namespace:VulnParser.ViwModels"
        mc:Ignorable="d"
        Title="VulnParser" 
        Height="450" Width="800"
        Background="#30353a">

    <Window.DataContext>
        <viwmodels:MainVM/>
    </Window.DataContext>
    
    <Grid>
        <DataGrid x:Name="VulnsGrid" IsReadOnly="True"
                  ColumnHeaderHeight="30" Margin="150,20,10,40"
                  Style="{StaticResource DataGridColors}">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3a4047"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#5197c0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Идентификатор угрозы" Binding="{Binding Path=ID}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Наименование угрозы" Binding="{Binding Path=Name}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Описание угрозы" Binding="{Binding Path=Description}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Источник угрозы" Binding="{Binding Path=SourceOfThreat}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Объект воздействия угрозы" Binding="{Binding Path=InteractionObject}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Нарушение конфеденциальности" Binding="{Binding Path=ViolationOfConfidentiality}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Нарушение целостности" Binding="{Binding Path=IntegrityViolation}" HeaderStyle="{StaticResource DataGridHeader}"/>
                <DataGridTextColumn Header="Нарушение доступности" Binding="{Binding Path=ViolationOfAvailability}" HeaderStyle="{StaticResource DataGridHeader}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
